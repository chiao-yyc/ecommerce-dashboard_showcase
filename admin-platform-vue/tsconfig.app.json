{
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/unit/composables/data-table-actions/useProductActions.test.ts",
    "tests/unit/composables/data-table-actions/useRoleUserActions.test.ts",
    "tests/unit/composables/data-table-actions/useTicketActions.test.ts",
    "tests/unit/composables/data-table-actions/useOrderActions.test.ts",
    "tests/unit/composables/data-table-actions/useDataTableActions.test.ts",
    "tests/unit/composables/data-table-actions/useCustomerActions.test.ts",
    "tests/unit/notification-constraints.test.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vue-virtual-scroller"]
  }
}
